<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/FacebookProfilePic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/FacebookProfilePic"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/FacebookName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/FacebookName"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:id="@+id/FacebookEmail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FacebookEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Log Out"
        android:textSize="18sp"
        android:id="@+id/btnFacebookLogOut"/>

</RelativeLayout>